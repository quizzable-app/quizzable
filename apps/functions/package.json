{
  "name": "functions",
  "scripts": {
    "build": "esbuild src/index.ts --bundle --platform=node --outdir=lib",
    "build:watch": "esbuild src/index.ts --bundle --platform=node --outdir=lib --watch",
    "dev": "npm run build && firebase emulators:start --only auth,functions,database --import=./data --export-on-exit=./data",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log",
    "firebase:predeploy": "./predeploy.sh"
  },
  "engines": {
    "node": "20"
  },
  "main": "lib/index.js",
  "dependencies": {
    "@prisma/client": "^5.19.1",
    "firebase-admin": "^12.1.0",
    "firebase-functions": "^5.0.0"
  },
  "devDependencies": {
    "@types/inquirer": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^4.9.0"
  },
  "private": true,
  "prisma": {
    "schema": "../../prisma/schema.prisma"
  }
}
