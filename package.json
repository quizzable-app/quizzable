{
  "name": "quizzable",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "build:ci": "turbo run build:ci",
    "deploy": "prisma db push && turbo run deploy --env-mode=loose",
    "dev": "prisma db push && turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\""
  },
  "dependencies": {
    "@prisma/client": "^5.19.0",
    "esbuild": "^0.23.1",
    "firebase": "^10.13.1",
    "prisma": "^5.19.1",
    "vitest": "^2.1.1"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "tsx": "^4.19.1",
    "turbo": "^2.1.1",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": "20"
  },
  "packageManager": "npm@10.8.2",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "prisma": {
    "schema": "prisma/schema.prisma",
    "seed": "tsx prisma/seed.ts"
  }
}
