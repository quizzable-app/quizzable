{
  "database": {
    "rules": "database.rules.json"
  },
  "functions": [
    {
      "source": "apps/functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": ["npm --prefix \"$RESOURCE_DIR\" run firebase:predeploy"]
    }
  ],
  "emulators": {
    "auth": {
      "host": "127.0.0.1",
      "port": 9099
    },
    "eventarc": {
      "host": "127.0.0.1",
      "port": 9299
    },
    "functions": {
      "host": "127.0.0.1",
      "port": 5001
    },
    "hub": {
      "host": "127.0.0.1",
      "port": 4400
    },
    "logging": {
      "host": "127.0.0.1",
      "port": 4500
    },
    "tasks": {
      "host": "127.0.0.1",
      "port": 4501
    },
    "database": {
      "host": "127.0.0.1",
      "port": 9000
    },
    "ui": {
      "host": "127.0.0.1",
      "enabled": true
    },
    "singleProjectMode": true
  }
}
